# Optional fallback configuration.
# Preferred flow: configure everything in CLI -> Settings menu.

# Optional: custom location for persisted CLI settings JSON
CLI_SETTINGS_FILE=data/runtime/cli_settings.json

# Broker selection: groww, upstox, zerodha
BROKER=groww

# Groww credentials (fallback only)
GROWW_API_KEY=your_groww_api_key_here
GROWW_API_SECRET=your_groww_api_secret_here
GROWW_ACCESS_TOKEN=

# Upstox credentials (fallback only)
UPSTOX_API_KEY=your_upstox_api_key_here
UPSTOX_API_SECRET=your_upstox_api_secret_here

# Zerodha credentials (fallback only)
ZERODHA_API_KEY=your_zerodha_api_key_here
ZERODHA_API_SECRET=your_zerodha_api_secret_here

# LLM provider and keys (fallback only)
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Pinecone (fallback only)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME_EQ=groww-instruments-eq

# Live strategy defaults (fallback only)
LIVE_DEFAULT_MODE=paper
LIVE_DEFAULT_REFRESH_SECONDS=15
LIVE_DEFAULT_STOP_LOSS_PCT=2.0
LIVE_DEFAULT_TAKE_PROFIT_PCT=4.0
LIVE_DEFAULT_RISK_PER_TRADE_PCT=1.0
LIVE_DEFAULT_MAX_POSITION_PCT=10.0
TRADING_KILL_SWITCH_ENABLED=false
LIVE_MARKET_HOURS_ONLY=true
LIVE_MAX_ORDERS_PER_DAY=40
LIVE_SESSION_STATE_FILE=data/runtime/live_session_state.json
ORDER_JOURNAL_FILE=data/runtime/order_journal.sqlite
LIVE_AUTO_RESUME_SESSION=true

# Visualization defaults (fallback only)
VIS_DEFAULT_PERIOD=1mo
VIS_DEFAULT_INTERVAL=1d
VIS_DEFAULT_CHART_TYPE=candlestick
